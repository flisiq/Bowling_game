<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/background_light</item>
    </style>

    <style name="flavorTextBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium_margin_padding</item>"
        <item name="android:background">@color/colorAccent</item>
        <item name="android:padding">@dimen/small_margin_padding</item>
    </style>

    <style name="titleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/title_FontSize</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="redButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/small_margin_padding</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/button_FontSize</item>
    </style>

    <style name="mainScoreDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/bigScore_FontSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="strikesSpares_TextField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|end</item>
        <item name="android:textSize">@dimen/smallScore_FontSize</item>
    </style>

    <style name="round_TextField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|end</item>
        <item name="android:textSize">@dimen/round_FontSize</item>
    </style>

    <style name="roundCount_Field">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/small_margin_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/round_FontSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="strikesSpares_CountField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/small_margin_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/smallScore_FontSize</item>
    </style>

    <style name="header_flavorBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/header_FontSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="flavor_flavorBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="playerName_Field">
        <item name="android:layout_width">@dimen/null_margin_padding</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/playerName_FontSize</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="land_flavorTextBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/null_margin_padding</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_marginRight">@dimen/big_margin_padding</item>
        <item name="android:layout_marginLeft">@dimen/big_margin_padding</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/small_margin_padding</item>
    </style>

    <style name="land_title">
        <item name="android:layout_width">@dimen/null_margin_padding</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/header_FontSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="vertical_separator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/big_margin_padding</item>
        <item name="android:layout_marginTop">@dimen/big_margin_padding</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:padding">0.5dp</item>
    </style>

    <style name="land_mainScoreDisplay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/land_bigScore_FontSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="land_strikesSpares_TextField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/smallScore_FontSize</item>
    </style>

    <style name="land_strikesSpares_CountField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/small_margin_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/smallScore_FontSize</item>
    </style>

    <style name="land_redButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin_padding</item>
        <item name="android:layout_marginTop">@dimen/medium_margin_padding</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/button_FontSize</item>
    </style>
</resources>

